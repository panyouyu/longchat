using "basic.style";
using "ui/widgets/widgets.style";
using "info/info.style";

guestInterval: 9px;

subTitleFont: font(17px);
subTitleMargins: margins(10px, 15px, 10px, 5px);

propertyMargins: margins(10px, 5px, 0px, 5px);

guestScroll: ScrollArea(defaultScrollArea) {
	bottomsh: 0px;
	topsh: 0px;
}

guestTitleField: InputField(defaultInputField) {
	font: subTitleFont;
	textMargins: subTitleMargins;
	textAlign: align(left);
	textFg: windowFg;
	textBg: windowBg;
	heightMin: 0px;
	heightMax: 50px;
	placeholderFg: placeholderFg;
	placeholderFgActive: placeholderFgActive;
	placeholderFgError: placeholderFgActive;
	placeholderMargins: margins(7px, 5px, 7px, 5px);
	placeholderAlign: align(topleft);
	placeholderScale: 0.;
	placeholderFont: normalFont;
	placeholderShift: -50px;
	border: 0px;
	borderActive: 0px;
	duration: 100;
}

guestContentField: InputField(defaultInputField) {
	font: normalFont;
	textMargins: margins(10px, 7px, 10px, 7px);
	textAlign: align(left);
	textFg: windowSubTextFg;
	textBg: windowBg;
	heightMin: 0px;
	heightMax: 500px;
	placeholderFg: placeholderFg;
	placeholderFgActive: placeholderFgActive;
	placeholderFgError: placeholderFgActive;
	placeholderMargins: margins(7px, 5px, 7px, 5px);
	placeholderAlign: align(topleft);
	placeholderScale: 0.;
	placeholderFont: normalFont;
	placeholderShift: -50px;
	border: 0px;
	borderActive: 0px;
	duration: 100;
}

guestProperty: RoundButton(defaultActiveButton) {
	textFg: activeButtonFg;
	textFgOver: activeButtonFgOver;
	numbersTextFg: activeButtonSecondaryFg;
	numbersTextFgOver: activeButtonSecondaryFgOver;
	textBg: activeButtonSecondaryFg;
	textBgOver: activeButtonSecondaryFgOver;

	numbersSkip: 7px;

	width: -34px;
	height: 26px;
	padding: margins(0px, 0px, 0px, 0px);

	textTop: 3px;

	iconPosition: point(0px, 0px);

	font: semiboldFont;

	ripple: RippleAnimation(defaultRippleAnimation) {
		color: lightButtonBgRipple;
	}
}

guestRemoveProperty: IconButton {
	width: 12px;
	height: 12px;

	icon: icon {{ "history_audio_cancel", activeButtonFg }};
	iconOver: icon {{ "history_audio_cancel", activeButtonFgOver }};
	iconPosition: point(0px, 0px);

	rippleAreaPosition: point(0px, 0px);
	rippleAreaSize: 12px;
	ripple: RippleAnimation(defaultRippleAnimation) {
		color: lightButtonBgRipple;
	}
}

guestAddProperty: IconButton {
	width: 26px;
	height: 26px;

	icon: icon {{ "guest_property_add", activeButtonFg }};
	iconOver: icon {{ "guest_property_add", activeButtonFgOver }};
	iconPosition: point(1px, 1px);

	rippleAreaPosition: point(1px, 1px);
	rippleAreaSize: 25px;
	ripple: RippleAnimation(defaultRippleAnimation) {
		color: activeButtonBgRipple;
	}
}

guestButtonMaxHeight: 148px;

UrlButton: LeftFlatButton {
	color: windowActiveTextFg;
	overColor: windowActiveTextFg;

	bgColor: windowBg;
	overBgColor: windowBgOver;

	width: -32px;
	height: 33px;

	textTop: 8px;
	textLeft: 10px;

	font: normalFont;
	overFont: normalFont;

	ripple: RippleAnimation(defaultRippleAnimation) {
		color: windowBgRipple;
	}
}

blockButton: LeftFlatButton(UrlButton) {
	color: attentionButtonFg;
	overColor: attentionButtonFgOver;

	bgColor: windowBg;
	overBgColor: attentionButtonBgOver;

	ripple: RippleAnimation(defaultRippleAnimation) {
		color: attentionButtonBgRipple;
	}
}